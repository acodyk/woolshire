<div class="home">
  <video muted loop playsinline {% if section.settings.autoplay %}autoplay{% endif %}>
    <source src="{{ section.settings.video_url }}" type="video/mp4">
  </video>
  <div class="home-content video-section__overlay-header">
    <h1 class="video-section__overlay-heading">{{ section.settings.heading }}</h1>
    <div class="video-section__overlay-subheading">{{ section.settings.text }}</div>
    <div class="video-section__overlay-button">
      <a href="{{ section.settings.linkurl }}" class="link_btn white_bg hover_black_bg round-br">{{ section.settings.linklabel }}</a>
    </div>
  </div>
</div>
<style>
.home {height: 80vh;position: relative;}video {position: absolute;width: 100%;height: 100%;object-fit: cover;}.home-content {position: absolute;color: #fff;text-align: left;width: 1440px;max-width: 100%;left: 50%;right: 50%;transform: translate(-50%,0);height: auto;top: auto;bottom: 0;padding: 40px 40px 80px 40px;justify-content: flex-start !important;align-items: flex-start;z-index:100;}.home:after {position: absolute;content: '';top: 0;left: 0;bottom: 0;right: 0;background-color: rgba(0,0,0,0.1);}@media (max-width: 767px) {.home-content {padding: 40px 20px;}.home {height: 50vh;}}@media (min-width: 768px) and (max-width: 992px) {.home {height: 50vh;}}
</style>
{% comment %}{% endcomment %}
{% schema %}
  {
    "name": "Home Fullscreen Video",
    "settings": [
      {
      "type": "html",
      "id": "heading",
      "label": "Heading",
      "default": "<p>Video</p>"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Subheading",
        "default": "<p>Enhance your home page with a video that relates to your process, products, or story.</p>"
      },
      {
        "type": "header",
        "content": "Video"
      },
      {
        "type": "checkbox",
        "id": "autoplay",
        "label": "Autoplay video",
        "default": true
      },
      {
        "type": "text",
        "id": "video_url",
        "label": "Video link",
        "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc"
      },
      {
      "type":"text",
      "id":"linklabel" ,
      "label":"Link Label"
      },
      {
        "type":"url",
        "id":"linkurl",
        "label":"Link Url"
      }
    ],
    "presets":[
      {
        "name": "Home Fullscreen Video"
      }
    ]
  }
{% endschema %}

